{
    "manifest_version": 3,
    "name": "AI Interview Assistant",
    "version": "1.0.0",
    "description": "Generate interview answers instantly",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "contextMenus"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "https://*.openai.com/*"
    ],
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Get Answer"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.ts"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}